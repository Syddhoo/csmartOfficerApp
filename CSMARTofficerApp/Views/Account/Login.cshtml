@model OfficerLoginCred
@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-4 offset-4 pl-5 pr-5 pb-5 pt-5">


            <div class="text-center pb-4 mt-4">
                <h1 class="text-info">Admin Login</h1>
            </div>

            <form asp-action="Login" method="post">

                <div class="form-group">
                    <label asp-for="UserId">User Name</label>
                    <input asp-for="UserId" class="form-control" placeholder="Enter your username" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter the password" />
                </div>
                <p style="color:red">
                    @ViewBag.Message
                </p>
                <div class="form-group text-center pt-4">
                    <button type="submit" class="btn btn-success btn-lg mb-1">Login</button>
                </div>


            </form>


        </div>
    </div>
</div>